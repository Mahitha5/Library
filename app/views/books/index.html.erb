<span class="create-book">
  <a href="/books/new"> Create new book </a>
</span>
<table>
  <tr>
    <th>
      Id
    </th>
    <th>
      Title
    </th>
    <th>
      Author
    </th>
    <th>
      Edition
    </th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td>
        <%= book.id %>
      </td>
      <td>
        <%= book.title %>
      </td>
      <td>
        <%= book.author %>
      </td>
      <td>
        <%= book.edition %>
      </td>
    </tr>
  <% end %>
</table>
