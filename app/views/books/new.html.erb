<h1> Add new book details </h1>

<%= form_with model: @book do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :author %><br>
    <%= form.text_field :author %>
  </div>
  <div>
    <%= form.label :edition %><br>
    <%= form.number_field :edition %>
  </div>
  <div>
    <%= form.submit :Save %>
  </div>
<% end %>